@model PeopleManager.Models.Person

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card form-card mx-auto">
        <div class="card-header text-center">
            <h2>הוספת אדם</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Phone, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-right">תמונה</label>
                    <div class="col-sm-7">
                        <div class="input-group">
                            <button type="button" id="btnChooseFile" class="btn btn-outline-secondary">בחר קובץ</button>
                            <input type="file" name="photo" id="photo" class="d-none" accept="image/*" />
                            <span id="selectedFileName" class="form-control">לא נבחר קובץ</span>
                        </div>
                        <img id="photoPreview" src="#" alt="תצוגה מקדימה" style="display:none; max-width:200px; margin-top:10px;" />
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <div class="col-sm-10 text-center">
                        <button type="submit" class="btn btn-primary">שמור</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">בטל</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // image preview and Hebrew UI for file chooser
        $(function() {
            $('#btnChooseFile').click(function() {
                $('#photo').trigger('click');
            });

            $('#photo').change(function (e) {
                var file = this.files && this.files[0];
                if (!file) {
                    $('#selectedFileName').text('לא נבחר קובץ');
                    $('#photoPreview').hide();
                    return;
                }

                // show filename in Hebrew UI
                $('#selectedFileName').text(file.name);

                var reader = new FileReader();
                reader.onload = function (ev) {
                    $('#photoPreview').attr('src', ev.target.result).show();
                }
                reader.readAsDataURL(file);
            });
        });
    </script>
}
