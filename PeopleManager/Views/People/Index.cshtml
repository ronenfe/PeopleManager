@model IEnumerable<PeopleManager.Models.Person>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "מנהל אנשים";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>רשימת אנשים</h2>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-success">הוספת אדם</a>
            <a href="@Url.Action("ExportPdf")" class="btn btn-outline-secondary">ייצא כקובץ PDF</a>
        </div>
    </div>

    <form method="get" action="@Url.Action("Index")" class="form-inline mb-3">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="חיפוש לפי שם" value="@Request.QueryString["q"]" />
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">חפש</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-spacing">
            <thead class="thead-light">
                <tr>
                    <th class="text-right">תמונה</th>
                    <th class="text-right">שם מלא</th>
                    <th class="text-right">טלפון</th>
                    <th class="text-right">אימייל</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td class="text-right">
                            @if (p.PhotoData != null && p.PhotoData.Length > 0)
                            {
                                var base64 = Convert.ToBase64String(p.PhotoData);
                                var src = "data:" + (p.PhotoContentType ?? "image/png") + ";base64," + base64;
                                <img src="@src" alt="תמונה" style="width:48px;height:48px;object-fit:cover;margin-left:8px;border-radius:4px;float:right" />
                            }
                        </td>
                        <td class="text-right">@p.FullName</td>
                        <td class="text-right">@p.Phone</td>
                        <td class="text-right">@p.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
